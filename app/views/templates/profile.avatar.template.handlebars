<div class="change-avatar container">
    <div class="row">
        <img src="{{image}}" alt="avatar" name="avatar" width="250px" height="250px">
    </div>

    <div class="row">
        <form action="#/home/profile/change-avatar" method="post">
            <div class="form-group">
                <input class="form-control" id="avatar" type="file" accept="image/*" name="image" required>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success btn-submit-form" value="CHANGE">
            </div>
        </form>
    </div>
</div>