<div class="sitemap">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#/home">Home</a></li>
        <li class="breadcrumb-item">{{category}}</li>

    </ol>
</div>

<div class="row reviews-containter">
    {{#each reviews}}
    <div class="col- reviews-single-review">
        <a href="#/home/review/{{authorUid}}{{title}}">
            <div class="single-review-image-containter">
                <div class="single-review-category">
                    {{category}}
                </div>
                <img class="single-review-image" src="{{image}}" />
                <div class="single-review-date">
                    <span>{{month}}</span>
                    <span> {{day}}</span>
                </div>
            </div>

            <div class="single-review-title">
                {{{title}}}
            </div>

            <div class="single-review-author">
                AUTHOR {{author}}
            </div>

            <div class="single-review-content">
                {{{content}}}
            </div>

            <img class="bottom-line" src="./images/bottom-line.png">
        </a>
    </div>
    {{/each}}
</div>

{{#if pagination}}
<div class="row pagination-container no-gutters">
    <div class="d-flex justify-content-start" id="previous">
        <a href="#/home/category/?category={{category}}&page=1&pageSize={{pageSize}}">«</a>
    </div>

    <div class="col d-flex justify-content-center pages">
        {{#each pageNumbers}}
        <a href="#/home/category/?category={{../category}}&page={{this}}&pageSize={{../pageSize}}">{{this}}</a>
        {{/each}}
    </div>

    <div class="d-flex justify-content-end" id="next">
        <a href="#/home/category/?category={{category}}&page={{countPages}}&pageSize={{pageSize}}">»</a>
    </div>
</div>
{{/if}}