<div class="sitemap">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#/home">Home</a></li>
        <li class="breadcrumb-item"><a>{{category}}</a></li>

    </ol>
</div>

<div class="row reviews-containter">
    <div class="col-ts-12 col-sm-6 col-md-8 col-lg-9 category-review-container">
        <div class="row">
            {{#each reviews}}
            <div class="col-xs-12 col-md-6 col-lg-3">
                <div class="reviews-single-review">
                    <a href="#/home/review/{{authorUid}}{{title}}">
                        <div class="single-review-image-containter">
                            <div class="single-review-category">
                                {{category}}
                            </div>
                            <img class="single-review-image" src="{{image}}" />
                            <div class="single-review-date">
                                <span>{{month}}</span>
                                <span> {{day}}</span>
                            </div>
                        </div>

                        <div class="single-review-title">
                            {{{title}}}
                        </div>

                        <div class="single-review-author">
                            AUTHOR {{author}}
                        </div>

                        <div class="single-review-content">
                            {{{substr '90' content}}}
                        </div>

                        <div class="botom-line"></div>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <aside class="col-ts-12 col-sm-6 col-md-4 col-lg-3 sidebar-widgets-container">
        <section class="sidebar-widget-container">
            <div class="recent-comments-container">
                <h3>Recent comments</h3>
                <div class="sidebar-widget-content-divider"></div>
