{{#if pagination}}
<div class="row pagination-container no-gutters">
    <div class="d-flex justify-content-start" id="previous">
        <a href="#/home/category/?category={{category}}&page=1&pageSize={{pageSize}}">«</a>
    </div>

    <div class="col d-flex justify-content-center pages">
        {{#each pageNumbers}}
        <a href="#/home/category/?category={{../category}}&page={{this}}&pageSize={{../pageSize}}">{{this}}</a> {{/each}}
    </div>

    <div class="d-flex justify-content-end" id="next">
        <a href="#/home/category/?category={{category}}&page={{countPages}}&pageSize={{pageSize}}">»</a>
    </div>
</div>
{{/if}}